<UserControl x:Class="Restaurant.UI.View.OrderPreparation.OrderNotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant.UI.View.OrderPreparation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox FontSize="16" FontWeight="Bold"
                  Background="LightGray">
            <GroupBox.Header>
                Uwagi do zamowienia
            </GroupBox.Header>
            <TextBox Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </GroupBox>
    </Grid>
</UserControl>
